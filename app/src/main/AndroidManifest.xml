<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.services">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginScreen" />
        <activity android:name=".activity.Registration" />
        <activity android:name=".activity.EntryTab" />
        <activity android:name=".fragment.PersonalDetail" />
        <activity android:name=".fragment.FireExtinguishersDetails" />
        <activity android:name=".activity.ClientDetailView" />
        <activity android:name=".activity.ForgotPassword"></activity>
        <activity android:name=".activity.RecoverPassword"></activity>
    </application>

</manifest>